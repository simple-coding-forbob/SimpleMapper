<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.simplecoding.simplemapper.fileDb.mapper.FileDbMapper">
	<select id="selectFileDbList"
	        parameterType="Criteria"
	        resultType="FileDbVO"
	>
	   SELECT * FROM TB_FILE_DB
	   WHERE FILE_TITLE LIKE '%' || #{searchKeyword}  || '%'
	   OFFSET #{offset} ROWS
	   FETCH NEXT #{size} ROWS ONLY
	</select>
	
	<select id="selectFileDbListTotCnt"
			parameterType="Criteria"
			resultType="int"
	>
		SELECT COUNT(*) FROM TB_FILE_DB
		WHERE file_title LIKE '%'|| #{searchKeyword} ||'%'
	</select>
	
	<insert id="insert" parameterType="FileDbVO">
		INSERT INTO TB_FILE_DB(UUID, 
		                       FILE_TITLE, 
		                       FILE_CONTENT,
		                       FILE_URL, 
		                       INSERT_TIME) 
		             VALUES(#{uuid}, 
		                     #{fileTitle},
		                     #{fileContent},
		                     #{fileUrl},
		                     SYSDATE)
	</insert>
	
	<select id="selectFileDb" 
	        parameterType="String"
	        resultType="FileDbVO"
	>
		SELECT * FROM TB_FILE_DB
		WHERE UUID = #{uuid}
	</select>
	
	<delete id="delete" parameterType="String">
		DELETE TB_FILE_DB
		WHERE UUID = #{uuid}
	</delete>
</mapper>