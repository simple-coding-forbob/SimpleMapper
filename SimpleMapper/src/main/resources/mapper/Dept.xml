<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.simplecoding.simplemapper.dept.mapper.DeptMapper">
    <select id="selectDeptList" 
	        parameterType="Criteria" 
	        resultType="DeptVO">
		SELECT * FROM TB_DEPT
		WHERE DNAME LIKE '%'|| #{searchKeyword} ||'%'
		OFFSET #{offset} ROWS
		FETCH NEXT #{size} ROWS ONLY
	</select>
	
<!--     <select id="selectDeptList" 
	        parameterType="Criteria" 
	        resultType="DeptVO">
		SELECT * FROM TB_DEPT
		<if test="searchKeyword != ''">
			WHERE DNAME LIKE '%'|| #{searchKeyword} ||'%'
		</if>
		OFFSET #{offset} ROWS
		FETCH NEXT #{size} ROWS ONLY
	</select> -->
	
	<select id="selectDeptListTotCnt"
			parameterType="Criteria"
			resultType="int"
	>
	    SELECT COUNT(*) FROM TB_DEPT
		WHERE DNAME LIKE '%' || #{searchKeyword} || '%'
	</select>
	
	<insert id="insert" parameterType="DeptVO">
		INSERT INTO TB_DEPT(
        DNO
        ,DNAME
        ,LOC
        ,INSERT_TIME
		) 
		VALUES(
		SQ_DEPT.NEXTVAL
		, #{dname} 
		, #{loc} 
		,SYSDATE)
	</insert>
	
	<select id="selectDept" 
	        parameterType="int"
	        resultType="DeptVO"
	>
		SELECT * FROM TB_DEPT
		WHERE DNO = #{dno}
	</select>
	
	<update id="update" parameterType="DeptVO">
		UPDATE TB_DEPT 
		  SET DNAME = #{dname}
		     ,LOC   = #{loc}
		     ,UPDATE_TIME = SYSDATE
		WHERE DNO = #{dno}
	</update>
	
	<delete id="delete" parameterType="DeptVO">
		DELETE TB_DEPT 
		WHERE DNO = #{dno}
	</delete>
</mapper>








